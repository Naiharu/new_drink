<!DOCTYPE html>
<html>
  <head>
    <title>NewDrink</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
<header>
  	<div class="header-top">
  		<div class="header-main">
  			<nav class="header-content">
  			<div class="logo"></div>
  				<ul class="nav-list header-top-list">
            <% if  user_signed_in? %>
             <li class="nav-list-item">
              <li class="nav-list-item"><%= link_to " ホーム", root_path, class: "glyphicon glyphicon-home header-bottom-admin link-type-basic" %></li>
            <li class="nav-list-item">
              <%= link_to " 商品一覧", items_path, class: "glyphicon glyphicon-align-left header-bottom-admin link-type-basic" %>
            </li>
  					<li　class="nav-list-item">
              <%= link_to " マイページ", user_path(current_user.id), class: "glyphicon glyphicon-user header-top-a link-type-basic" %>
            </li>
  					<li　class="nav-list-item">
              <%= link_to " ログアウト", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out header-top-a link-type-basic" %>
            </li>

          <% elsif  admin_signed_in? %>
            <li class="nav-list-item"><%= link_to " ホーム", root_path, class: "glyphicon glyphicon-home header-bottom-admin link-type-basic" %></li>
            <li class="nav-list-item">
              <%= link_to " 商品一覧", items_path, class: "glyphicon glyphicon-align-left header-bottom-admin link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to "　商品追加", new_item_path, class: "glyphicon glyphicon-folder-open header-top-a link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to "　カテゴリ追加", categories_path, class: "glyphicon glyphicon-user header-top-a link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to "　メーカー追加", makers_path, class: "glyphicon glyphicon-duplicate header-top-a link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to " ログアウト", destroy_admin_session_path, method: :delete, class: "glyphicon glyphicon-log-out header-top-a link-type-basic" %>
            </li>

             <% else %>
             <li class="nav-list-item"><%= link_to " ホーム", root_path, class: "glyphicon glyphicon-home header-bottom-admin link-type-basic" %></li>
            <li class="nav-list-item">
              <%= link_to " 商品一覧", items_path, class: "glyphicon glyphicon-align-left header-bottom-admin link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to " ログイン", new_user_session_path, class: "glyphicon glyphicon-log-in header-top-a link-type-basic" %>
            </li>
            <li class="nav-list-item">
              <%= link_to " 会員登録", new_user_registration_path, class: "glyphicon glyphicon-edit header-top-a link-type-basic" %>
            </li>

          <% end %>

  				</ul>
  			</nav>
  		</div>
    </div>
  </header>
  <body>
    <%= yield %>
  </body>
  <footer>
  	<div class="footer-content">
  		<div class="logo"></div>
  		<div class="footer-text">
        <p>@new_drink</p>
      </div>
  	</div>
  </footer>
</html>

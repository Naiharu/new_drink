<div class="body-content">
  <div class="container-fluid">
    <div class="row">
       <h2 class="h2">カテゴリの追加</h2>
      <div class="new-main-top">
        <%= form_for(@category) do |f| %>
        <table class="table">
          <tbody>
              <tr>
                <div class="field">
                  <td><label for="new_name">カテゴリ名</label></td>
                  <td><%= f.text_field :category_name, class:"form-control" %></td>
                </div>
                <div class="actions">
                  <td><%= f.submit "　作 成　", class:"btn btn-info " %></td>
                </div>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <h2 class="h2">カテゴリの編集</h2>
      <!-- すべてのジャンル名を一覧表示↓ -->

      <div class="new-main-bottom">
        <table class="table table-striped table-bordered">
          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td class="new-center"><%= category.category_name %></td>
                <td class="new-center"><%= link_to "　編 集　", edit_category_path(category), class:"btn btn-default btn-xs" %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

  </div>
</div>
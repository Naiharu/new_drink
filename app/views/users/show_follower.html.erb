<div class="body-content">
  <div class="container-fluid">
    <div class="row">
      <div class="main-content">
        <h2 class="h2">フォロワー一覧</h2><br>
			<% @user.followers.each do |user| %>
			<div class="item-review-box">
				<table>
				<tr>
  				<td class="col-sm-2"><%= user.name %></td>
  				<td class="col-sm-2"><%= attachment_image_tag user, :user_image, :fill, 50, 50, fallback: "test.png", size: '50x50' %></td></td>
  				<td class="col-sm-2"><b><%= link_to 'このユーザーを見に行く', user_path(user) %><b></td>
				</tr>
				</table>
				<% end %>
			</div>
			</div>
		</div>
	</div>
</div>